<header class="header shadow">
	<div class="header__backdrop" onclick="hideMenu()"></div>
	<a class="header__logo" href="/#🔝"><i class="far fa-file-code fa-2x"></i></a>
	<div class="header__burger" onclick="toggleMenu(this)">
		<div class="header__burger_1"></div>
		<div class="header__burger_2"></div>
		<div class="header__burger_2"></div>
	</div>
	<nav onclick="hideMenu()">
		<a href="/#about📖">
			About&nbsp;Me
		</a>
		<a href="/#projects💻">
			Projects
		</a>
		<a href="/#hobbies💪🏻">
